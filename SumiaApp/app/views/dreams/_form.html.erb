<%= simple_form_for @dream, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@dream[:title]) %>
  <%= f.input :data_time %>
  <%= error_span(@dream[:data_time]) %>
  <%= f.input :description %>
  <%= error_span(@dream[:description]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dreams_path, :class => 'btn btn-default' %>
<% end %>
